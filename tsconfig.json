{
  "exclude": ["dist", "node_modules"],
  "include": ["src/**/*"],
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",
    "lib": ["ES2021", "DOM"],
    "target": "ES2021",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "module": "commonjs",
    "typeRoots": ["./node_modules/@types", "./typings"]
  },
  "ts-node": {
    "esm": true
  }
}
